<h1>{{cube.name}}</h1>
<img class="cube" src="{{cube.imageUrl}}" />
<div class="details">
	<p><span>Description:</span> {{cube.description}}</p>
	<p><span>Difficulty level:</span> {{cube.level}}</p>
	<div>
	<a class="btn" href="/">Back</a>
	{{#if isAuthenticated}}
	{{#if owner}}
	<a href="/attach/accessory/{{cube._id}}" class="btn"> Attach Accessory</a>
	<a href="/edit/{{cube._id}}" class="btn">EDIT</a>
	<a href="/delete/{{cube._id}}" class="btn">DELETE</a>
	{{/if}}
	{{/if}}
	</div>

	 <h2>Accessories</h2>
	 <div class="accessories">
		{{#each accessories}}
		 <div class="accessory">
			<img src="{{imageUrl}}" alt="stickerName">
			<h3>{{name}}</h3>
			<p>{{description}}</p>
		</div>
		{{else}}
		 <h3 class="italic">This cube has no accessories yet...</h3>
		{{/each}}
	 </div>

</div>