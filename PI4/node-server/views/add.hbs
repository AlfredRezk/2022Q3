

<section class="card card-body shadow p-5">
<form action="/add" method="post">
  <div class="form-group mb-3">
    <label for="title">Title</label>
    <input type="text" class="form-control " id="title" name="title" placeholder="Enter Product Title">
  </div>

  <div class="form-group mb-3">
    <label for="price">Price</label>
    <input type="number" class="form-control " id="price" name="price" placeholder="Enter Product Price">
  </div>

  <div class="form-group mb-3">
    <label for="imageUrl">Image Url</label>
    <input type="text" class="form-control " id="imageUrl" name="imageUrl" placeholder="Enter Product Image">
  </div>

  <div class="form-group mb-3">
    <label for="description">Description</label>
    <textarea name="description" id="description" name="description"  class="form-control " ></textarea>
   </div>




  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</section>